{{# partial "registrationHeader"}}

<div class="container">
    <form class="form" method="post">
        <div class="form-header">
            <h1>Registrarse como agente</h1>
        </div>

        <div class="form-floating mb-3">
            <input
                    class="form-control"
                    type="text"
                    id="username"
                    name="username"
                    placeholder="Usuario"
                    required
            />
            <label for="floatingInput">Nombre de usuario</label>
        </div>
        <div class="form-floating">
            <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="Password"
                    required
            />
            <label for="floatingPassword">Contrase√±a</label>
        <div class="form-floating mt-3">
            <input
                    type="text"
                    class="form-control"
                    id="nombre" 
                    name="nombre"
                    placeholder="nombre"
                    required
            />
            <label for="floatingPassword">Nombre</label>
        </div>

            <div class="form-floating mt-3">
                <select class="form-select" id="sector" name="sector">
                    <option selected>Seleccionar</option>
                    {{#each provincias}}
                        <option value="{{id_db}}">{{nombre}}</option>
                    {{/each}}
                    {{#each localidades}}
                        <option value="{{id_db}}">{{nombre}}</option>
                    {{/each}}
                    {{#each municipios}}
                        <option value="{{id_db}}">{{nombre}}</option>
                    {{/each}}
                </select>
                <label for="sector">Sector territorial</label>
            </div>


        <!-- TODO: Cambiar el sig boton por uno que valide los formularios -->
        <div class="col text-center mt-3">
            <button type="submit" class="btn btn-success" value="Log In">Registrarse</button>
            {{!-- si no funca cambiar el button por un input --}}
        </div>
        </div>
    </form>
</div>


{{/partial}}
